{% if post.data.image.file and post.data.image.description %}
	{% set coverType = 'image' %}
{% elif post.data.video.file %}
	{% set coverType = 'video' %}
{% else %}
	{% set coverType = 'none' %}
{% endif %}

<div class="w-max flex flex-col items-center h-full">
	{% if coverType === 'image' %}
		<img class="w-82 md:w-121 h-44 md:h-69 mx-auto rounded object-cover -z-1 shadow-sm" src="{% replacePathBasename post.url, post.data.image.file %}" alt="{{ post.data.image.description }}">
	{% elif coverType === 'video'%}
		<video class="block w-82 md:w-121 h-44 md:h-69 mx-auto rounded object-cover -z-1 shadow-sm" playsinline="playsinline" loop="loop" muted="muted" disablepictureinpicture="disablePictureInPicture">
			<source src="{% replacePathBasename post.url, post.data.video.file %}#t={{ post.data.video.time or 2 }},{{ (post.data.video.time or 2) + 1 }}" />
		</video>
	{% else %}
		<div class="w-82 md:w-121 h-44 md:h-69 mx-auto rounded -z-1 bg-gradient-to-b to-yellow-600 via-yellow-300 from-yellow-100 shadow-sm"></div>
	{% endif %}

	<div class="w-87 md:w-110 p-4 flex flex-col justify-center gap-y-2.5 bg-white rounded -mt-4 md:-mt-24 shadow">
		<h2 class="text-2xl font-serif font-bold">
			<a href="{{ post.url }}">{{ post.data.title }}</a>
		</h2>
		{% include 'publication-metadata.njk' %}
		<p class="text-lg font-serif">{{ post.data.description or 'An article written by Andria Brown' }}</p>
	</div>
</div>